{
  "name": "tyenv",
  "version": "1.2.7",
  "author": "Andrii Lytovchenko <andr.lyt.dev@gmail.com>",
  "license": "MIT",
  "description": "An utility for creation types for `process.env` variables and `.env` file",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "bin": {
    "tyenv": "./bin/index.js"
  },
  "files": [
    "lib",
    "bin"
  ],
  "engines": {
    "node": ">=16"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "javascript",
    "environment variables"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:andr-ii/tyenv.git"
  },
  "scripts": {
    "start": "ts-node ./src",
    "build": "run-s clean build:lib build:bin",
    "build:lib": "tsc",
    "build:bin": "npsh bin 'init()'",
    "clean": "run-s clean:lib clean:bin",
    "clean:lib": "rm -rf ./lib",
    "clean:bin": "rm -rf ./bin",
    "types": "tsc --noEmit",
    "format": "prettier --write '**/*.{js,json,md,ts,yml,yaml}'",
    "format:check": "prettier -l '**/*.{js,json,md,ts,yml,yaml}'",
    "lint": "eslint --fix '**/*.ts'",
    "lint:check": "eslint '**/*.ts'",
    "spell": "cspell '**/*'",
    "hooks": "npsh hooks",
    "svc": "npsh svc andr-ii tyenv master",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "cspell": "^8.3.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "npsh": "^2.0.6",
    "nuti": "^3.0.1",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
